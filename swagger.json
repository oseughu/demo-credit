{
  "openapi": "3.0.0",
  "info": {
    "title": "Demo Credit API",
    "version": "1.0.0",
    "description": "This is an API built for a demo credit wallet",
    "contact": {
      "name": "Ose Ughu",
      "url": "https://oseughu.com",
      "email": "oseughu@gmail.com"
    }
  },
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "authorization",
        "in": "cookie",
        "name": "jwt"
      }
    }
  },
  "servers": [
    {
      "url": "https://ose-ughu-lendsqr-be-test.cyclic.app/api/v1"
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/register": {
      "post": {
        "summary": "Create a new user with 0.00 balance",
        "requestBody": {
          "description": "User Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/UserSignUp"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Ok. Sign Up Successful"
          },
          "400": {
            "description": "Failed. User already exists or a required field is missing."
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Sign in User",
        "requestBody": {
          "description": "A JSON object containing the email and password.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok. Login Successful"
          },
          "401": {
            "description": "Failed. Invalid credentials."
          }
        }
      }
    },
    "/user": {
      "get": {
        "summary": "Get the current logged in user",
        "security": { "OAuth2": [] },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/CurrentUser"
            }
          },
          "401": {
            "description": "Failed. User not logged in."
          }
        }
      }
    },
    "/deposit": {
      "post": {
        "summary": "Add funds to your wallet",
        "requestBody": {
          "description": "Deposit Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Deposit"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Transaction"
            }
          },
          "401": {
            "description": "Failed. User not logged in."
          }
        }
      }
    },
    "/transfer": {
      "post": {
        "summary": "Transfer funds from your wallet to another user on Demo Credit",
        "requestBody": {
          "description": "Transfer Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Transfer"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Transaction"
            }
          },
          "401": {
            "description": "Failed. User not logged in."
          }
        }
      }
    },
    "/withdrawal": {
      "post": {
        "summary": "Withdraw funds from your wallet",
        "requestBody": {
          "description": "Withdrawal Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Transfer"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Transaction"
            }
          },
          "401": {
            "description": "Failed. User not logged in."
          }
        }
      }
    },
    "/transactions": {
      "get": {
        "summary": "Get transactions of the current logged in user",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Transaction"
            }
          },
          "401": {
            "description": "Failed. User not logged in."
          }
        }
      }
    },
    "/transactions/{transactionId}": {
      "get": {
        "parameters": [
          {
            "name": "transactionId",
            "in": "path",
            "required": true,
            "description": "ID of the transaction needed",
            "type": "string"
          }
        ],
        "summary": "Get a transaction of the current logged in user",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Transaction"
            }
          },
          "401": {
            "description": "Failed. User not logged in."
          }
        }
      }
    }
  },
  "definitions": {
    "UserSignUp": {
      "type": "object",
      "properties": {
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "UserLogin": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "CurrentUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "balance": {
          "type": "string"
        }
      }
    },
    "Deposit": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "integer"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "Transfer": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "recipient": {
          "type": "string"
        },
        "confirmRecipient": {
          "type": "string"
        }
      }
    },
    "Transaction": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "recipient": {
          "type": "string"
        }
      }
    }
  }
}
